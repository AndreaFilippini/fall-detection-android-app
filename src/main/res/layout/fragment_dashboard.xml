<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ui.dashboard.DashboardFragment" >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:id="@+id/setTimerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/setIpBannerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/set_ip_string"
                android:background="@color/light_gray"
                android:textColor="@android:color/white"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ip_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:maxLength="3"
                android:hint="@string/ip_hint_string"
                android:inputType="number"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/dot_string"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <EditText
                android:id="@+id/ip_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:maxLength="3"
                android:hint="@string/ip_hint_string"
                android:inputType="number"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/dot_string"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <EditText
                android:id="@+id/ip_number_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:maxLength="3"
                android:hint="@string/ip_hint_string"
                android:inputType="number"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/dot_string"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <EditText
                android:id="@+id/ip_number_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textColorHint="@color/light_gray"
                android:maxLength="3"
                android:hint="@string/ip_hint_string"
                android:inputType="number"
                android:maxLines="1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal"
            android:padding="0dp"
            android:gravity="center">

            <Button
                android:id="@+id/setIpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ip_button_string"
                android:paddingHorizontal="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setNumbersBannerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/set_numbers_string"
                android:background="@color/light_gray"
                android:textColor="@android:color/white"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:textColorHint="@color/light_gray"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:hint="@string/add_number_hint_string"
                    android:inputType="phone"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/addButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_number_string"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/phoneRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setEmailBannerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/set_emails_string"
                android:background="@color/light_gray"
                android:textColor="@android:color/white"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:autofillHints=""
                    android:textColorHint="@color/light_gray"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:maxLines="1"
                    android:maxLength="40"
                    android:hint="@string/add_email_hint_string"
                    android:inputType="textEmailAddress"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:scrollHorizontally="true"
                    android:singleLine="true"/>

                <Button
                    android:id="@+id/addEmailButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_email_string"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/emailRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setPriorityBannerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/set_priority_string"
                android:background="@color/light_gray"
                android:textColor="@android:color/white"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="35dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setTimerBannerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/set_timer_string"
                android:background="@color/light_gray"
                android:textColor="@android:color/white"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setTimerInputContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="2dp"
            android:layout_marginHorizontal="35dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/countdown_string"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/secondsInput"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:maxLines="1"
                android:maxLength="2"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/light_gray"
                android:background="@drawable/rounded_left"
                android:paddingLeft="10dp"/>

            <Button
                android:id="@+id/timerButton"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/save_string"
                android:background="@drawable/rounded_right"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setDelayInputContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="2dp"
            android:layout_marginHorizontal="35dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/operations_string"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/delayInput"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:maxLines="1"
                android:maxLength="2"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/light_gray"
                android:background="@drawable/rounded_left"
                android:paddingLeft="10dp"/>

            <Button
                android:id="@+id/delayButton"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/save_string"
                android:background="@drawable/rounded_right"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setSoundInputContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="2dp"
            android:layout_marginVertical="0dp"
            android:layout_marginHorizontal="35dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/sound_string"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/soundInput"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:maxLines="1"
                android:maxLength="2"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/light_gray"
                android:background="@drawable/rounded_left"
                android:paddingLeft="10dp"/>

            <Button
                android:id="@+id/soundButton"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="@string/save_string"
                android:background="@drawable/rounded_right"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/setCredentialsBannerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="@string/set_credentials_string"
                android:background="@color/light_gray"
                android:textColor="@android:color/white"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp">

            <EditText
                android:id="@+id/userEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textColorHint="@color/light_gray"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:maxLines="1"
                android:maxLength="40"
                android:hint="@string/add_user_hint_string"
                android:inputType="textEmailAddress"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:textColorHint="@color/light_gray"
                android:paddingHorizontal="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:maxLines="1"
                android:maxLength="16"
                android:hint="@string/add_password_hint_string"
                android:inputType="text"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:scrollHorizontally="true"
                android:singleLine="true"/>

            <Button
                android:id="@+id/addCredentalsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_credentials_string"
                android:textSize="15sp"/>

        </LinearLayout>


        <!-- Spacer View to create extra scroll space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp" /> <!-- Adjust height for desired scroll area -->
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>